<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.arnaud.heh.be.androidproject.Activities.UpdateUserActivity">

    <Toolbar
        android:id="@+id/tb_update_user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        />

    <TextView
        android:id="@+id/tv_update_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Information"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <!--Nom de famille -->
    <EditText
        android:id="@+id/et_update_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="text"
        android:hint="Surname"
        android:nextFocusDown="@+id/et_update_name"
        />

    <!--PrÃ©nom-->
    <EditText
        android:id="@+id/et_update_user_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="text"
        android:hint="Name"
        android:nextFocusDown="@+id/et_update_email"
        />

    <EditText
        android:id="@+id/et_update_user_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:nextFocusDown="@+id/et_update_password"
        />

    <EditText
        android:id="@+id/et_update_user_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textPassword"
        android:hint="Password"
        />

    <EditText
        android:id="@+id/et_update_user_pwdconf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        />

    <Button
        android:id="@+id/bt_update_user_update"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Validate !"
        android:layout_marginTop="10dp"
        style="@android:style/MediaButton"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="OnModifyUserClickManager"/>

</LinearLayout>