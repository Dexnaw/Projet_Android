<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.arnaud.heh.be.androidproject.Activities.RegisterActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/iv_inscription_logo"
        android:src="@drawable/registration"/>

    <TextView
        android:id="@+id/tv_reg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW USER"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_register_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="text"
        android:hint="First Name"
        android:nextFocusDown="@+id/et_register_name"
        />

    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="text"
        android:hint="Name"
        android:nextFocusDown="@+id/et_register_mail"
        />

    <EditText
        android:id="@+id/et_register_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:nextFocusDown="@+id/et_register_pwd"
        />

    <EditText
        android:id="@+id/et_register_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textPassword"
        android:hint="Password"
        />

    <EditText
        android:id="@+id/et_register_pwdconf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAntracite"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        />

    <Button
        android:id="@+id/bt_register_signup"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="Validate !"
        android:layout_marginTop="10dp"
        style="@android:style/MediaButton"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="OnRegistrationClickManager"/>

</LinearLayout>